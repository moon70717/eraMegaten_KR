;　위력
@SKILL_POWER_3623, ARG
LOCAL:5 = 0
;疑似付与管理用のDゲージを取得。
LOCAL:3= (SKILLGAGE_D_GET(ARG,3622)/10)
FOR LOCAL,1,11
	;敵に疑似付与されている分の死霊カウンターを合算。
	LOCAL:4 = LOCAL:3 / POWER(10,LOCAL)
	LOCAL:4 = LOCAL:4 - ((LOCAL:4 / 10)*10)
	IF POS(LOCAL) < 0
		CONTINUE
	ELSE
		LOCAL:5 += LOCAL:4
	ENDIF
NEXT
;威力は可変式で最大540。ただし単体で殴りかかってくるボス相手だと420が上限。
;なお最大ダメージを出すためには敵10体に上限まで死霊カウンターを付与せねばならない。不可能じゃないかな。
SELECTCASE LOCAL:5
CASE 0 TO 8
	RETURN 400
CASE 9 TO 18
	RETURN 420
CASE 19 TO 27
	RETURN 440
CASE 28 TO 36
	RETURN 460
CASE 37 TO 45
	RETURN 480
CASE 46 TO 54
	RETURN 500
CASE 55 TO 63
	RETURN 510
CASE 64 TO 72
	RETURN 520
CASE 73 TO 81
	RETURN 530
CASE IS >= 90
	RETURN 540
ENDSELECT

