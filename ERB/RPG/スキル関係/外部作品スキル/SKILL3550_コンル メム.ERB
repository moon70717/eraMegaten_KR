	ELSEIF ARG:1 == 19
		LOCAL:1 = 1
		LOCAL:2 = 7
	ELSEIF ARG:1 == 20
		LOCAL:1 = 7
		LOCAL:2 = 12
	ELSEIF ARG:1 == 21
		LOCAL:1 = 12
		LOCAL:2 = 17
	ELSEIF ARG:1 == 22
		LOCAL:1 = 7
		LOCAL:2 = 17
	ELSEIF ARG:1 == 23
		LOCAL:1 = 1
		LOCAL:2 = 17
	ENDIF
	FOR LOCAL,LOCAL:1,LOCAL:2
		SIF POS(LOCAL) < 0
			CONTINUE
		CFLAG:POS(LOCAL):명중강화 = MAX(-16, CFLAG:POS(LOCAL):명중강화 - 4)
		CFLAG:POS(LOCAL):회피강화 = MAX(-16, CFLAG:POS(LOCAL):회피강화 - 4)
	NEXT
	PRINTFORMW \@ ARG:1 > 19 ? 적 # 아군 \@의 명중ㆍ회피를 낮췄다！
;羅刹
ELSE
	CALL ATTACK_RAND,ARG,ARG:1,3550
ENDIF



