;無名の高校生
;援助交際サンプル用
;ブルセラ?で小遣い稼ぎする高校生たち。ぶっちゃけ何の効果もないフレーバー。身受け不可(身受け処理を別利用)
;相場とかは知らんのでテキトー。両替屋の1マッカ=200円レート換算で50マッカ=1万として、高校生が飛び付きそうな価格設定で
@SORP_PLAY_1020, ARGS
#DIM CHARA, 1
#LOCALSSIZE 1
SELECTCASE ARGS
	CASE "娼婦番号"
		RESULTS = [1020]
	CASE "キャラ名"
		IF 롯폰기창관플래그:20 == 0
			RESULTS = 박복해보이는 여자애
		ELSE
			RESULTS = 고양된 여자애
		ENDIF
	CASE "指名名"
		IF 롯폰기창관플래그:20 == 0
			RESULTS = 박복해보이는 여자애
		ELSE
			RESULTS = 고양된 여자애
		ENDIF
	CASE "所属"
		;表なら1、裏なら2、援助なら3
		RETURN 3
	CASE "判定"
		RETURN 0
	CASE "価格"
		IF 롯폰기창관플래그:20 == 0
			RETURN 50
		ELSE
			RETURN 300
		ENDIF
	CASE "紹介文"
		IF 롯폰기창관플래그:20 == 0
			CALL MESSAGE_WINDOW_D, "노출한 웨이트리스", "그녀는―/속옷 매각을 희망하고 있는 것 같습니다―"
			CALL MESSAGE_WINDOW_D, "노출한 웨이트리스", "그룹으로 오신 분인데―/이번에는 관망으로―/그녀만 참가를 희망한다고 합니다―"
		ELSE
			CALL MESSAGE_WINDOW_D, "노출한 웨이트리스", "그녀는―/속옷 매각을 희망하고 있는 것 같습니다―"
			CALL MESSAGE_WINDOW_D, "노출한 웨이트리스", "이전에 지원받았던 분들의 이야기를 듣고―/「우리 거라면 이정도 가치는 있겠지―」라고―/원조를 희망하고 있는 것 같습니다―"
		ENDIF
	CASE "確認"
		IF 롯폰기창관플래그:20 == 0
			CALL MESSAGE_WINDOW_D, "노출한 웨이트리스", "50 마카로 원조를 희망하고 있습니다만―/어떻게 하실건가요―?"
		ELSE
			CALL MESSAGE_WINDOW_D, "노출한 웨이트리스", "300 마카로 원조를 희망하고 있습니다만―/어떻게 하실건가요―?"
		ENDIF
	CASE "プレイ口上"
		IF 롯폰기창관플래그:20 == 0
			CALL MESSAGE_WINDOW_D, "박복해보이는 여자애", "저, 저기……/원교자 분이신가요…?"
			CALL MESSAGE_WINDOW_D, "", "＞나타난 것은 박복해 보이는 여고생이다"
			CALL MESSAGE_WINDOW_D, "박복해보이는 여자애", "죄, 죄송합니다……/뒤로, 돌아 보고 계시면 안될까요…?"
			CALL MESSAGE_WINDOW_D, "", "………………/…………/……"
			CALL MESSAGE_WINDOW_D, "박복해보이는 여자애", "이, 이걸로……부탁드려요……"
			CALL MESSAGE_WINDOW_D, "", "＞벗은 속옷을 재빨리 건내고, 그녀는 고개를 숙인 채 떠났다…"
			CALL SHOW_PICTURE, "EMPTY"
			;経験フラグを設定
			롯폰기창관플래그:20 = 1
		ELSEIF RAND:2 == 0 && TALENT:MASTER:남자 && !TALENT:MASTER:오토코노코
			CALL MESSAGE_WINDOW_D, "", "＞나타난 것은 이전과는 다른 여고생 2인조다/조금 화장이 진하고, 거리에서 비교적 흔히 볼 수 있는 갸루 같은 용모다"
			SELECTCASE RAND:5
				CASE 0
					;1/5でエロ展開(その前に1/2で分岐するので、実質1/10)　なんかヤバい奴に襲われる
					;例えるなら、風俗でアラフィフぐらいのBBA嬢に当たってベテランのテクで抜けるっちゃ抜けるんだけど気分的にはアレな感じ、と言えば分かる人は分かると思う…
					CALL MESSAGE_WINDOW_D, "색에 당당한 아이", "아저씨가 사주는거야?/와아, 변태☆"
					CALL MESSAGE_WINDOW_D, "요염한 눈을 한 아이", "뜨거운 시선이 느껴진다구―/후후…뭘 당하게 될까―아…"
					CALL MESSAGE_WINDOW_D, "", "＞대단한 성욕 몬스터다/아무리 봐도 지뢰입니다 진짜(이하 생략)"
					CALL MESSAGE_WINDOW_D, "", @"＞팬티를 미끼로 한 낚시에 낚인 사냥감…/장난감이 될 운명을 %마스터는% 깨닫고 말았다…"
					CALL MESSAGE_WINDOW_D, "색에 당당한 아이", "얌전히 있어야지☆아저씨/우리 팬티로 천국을 보여줄테니까"
					CALL MESSAGE_WINDOW_D, "요염한 눈을 한 아이", "이런 거 겪고 나면 속옷 페티시가 생기는게 아닐까…?/으으음, 속옷 페티시로 만들어줄게에…"
					CALL MESSAGE_WINDOW_D, "", "………………/…………/……"
					CALL MESSAGE_WINDOW_D, "", "＞각각 한 번씩 쥐여 짜였다…/물론, 사용이 끝난 팬티의 테이크 아웃 포함이다//…왜인지, 절묘하게 기쁘지 않은 기분"
					;ハズレで終わるだけだとちょっと可哀想なので、経験増加のオマケ付き
					EXP:MASTER:절정경험 += 2
					EXP:MASTER:사정경험 += 2
				CASEELSE
					;それ以外は普通のブルセラ。比較的優しいギャルでストリップのサービス付き(ストリップ描写書けないから省略するけどな！)
					;イチゴ≒1.5万の事で2個つまり3万。それが二人で6万分≒300マッカの計算で価格を設定。この部分を基準に分岐を増やした形なので、イマイチ値段と釣り合ってなくても許して…
					CALL MESSAGE_WINDOW_D, "금발 갸루", "아저씨가 우리 팬티 사주는 거야?"
					CALL MESSAGE_WINDOW_D, "갈색 머리 갸루", "개변태 돼지 파파를 예상했는데/상상보다 10배는 낫지 않냐?"
					CALL MESSAGE_WINDOW_D, "금발 갸루", "선불로 딸기 2개. 아, 우리 각자 별개지?/팬티만으로 참외만큼 번다니 존나 웃기네☆"
					CALL MESSAGE_WINDOW_D, "갈색 머리 갸루", "우리들 기준으로 아저씨는 무난무난해보이고/살짝 서비스해도 좋아♪"
					CALL MESSAGE_WINDOW_D, "", "………………/…………/……"
					SELECTCASE RAND:3
						CASE 0
							LOCALS = 시스루 팬티와 로라이즈
						CASE 1
							LOCALS = 에나멜 쇼츠와 T백
						CASE 2
							LOCALS = 애니멀 무늬 하이레그와 끈팬티
					ENDSELECT
					CALL MESSAGE_WINDOW_D, "", @"＞즉석 스트립 쇼를 감상하고,/%조사처리(LOCALS,"를")% 손에 넣었다"
			ENDSELECT
		ELSE
			SELECTCASE RAND:2
				CASE 0
					;悪魔たちによる衣類売買。無名の高校生でもブルセラでもないやんけ！ってツッコミは認める
					CALL MESSAGE_WINDOW_D, "나이트메어", "당신이 매입해 주는거에요?"
					CALL MESSAGE_WINDOW_D, "네코마타", "우리 세력권에 들어온 날강도 녀석∼/임시수입 달달해―♪"
					CALL MESSAGE_WINDOW_D, "하피", "여기 좋은걸! 헌옷집보다 비싸게 사주고∼"
					CALL MESSAGE_WINDOW_D, "", "＞팔러 나온 것은 골목의 악마들이었다/골목이라지만 약육강식, 사바나의 규칙이 여기서도 유효한 것 같다"
					CALL MESSAGE_WINDOW_D, "", "………………/…………/……"
					CALL MESSAGE_WINDOW_D, "", "＞대미지 가공된 속옷을 여러 장 손에 넣었다/그냥 누더기 조각도 몇 개 보인다…"
				CASE 1
					;ゾンビちゃんによるブルセラ。無名の高校生(軽高生ゾンビちゃん)
					;ゾンビの体臭隠しのために香水を多用してた的な扱い。腐乱臭する下着とか流石にレベル高い気がしたのでこんな形に…
					CALL MESSAGE_WINDOW_D, "", "＞나타난 것은 이전과는 다른 여고생 2인조다/약간 화장이 진한, 거리에서 비교적 흔히 볼 수 있는 갸루 같은 용모다"
					CALL MESSAGE_WINDOW_D, "좀비 쨩 A", "원래 브랜드 제품인데 사주지 않을래? 잠깐 최근에 살 게 생겨서 말이야―"
					CALL MESSAGE_WINDOW_D, "좀비 쨩 B", "브랜드라고 해도 꽤 옛날 옛적 물건이지만―/봐, 우리가 이 꼴이잖아?"
					SELECTCASE RAND:4
						CASE 0
							LOCALS = 마계에서도 소문난 신색 매니큐어
						CASE 1
							LOCALS = 요즘 유행하는 신상 액세서리
						CASE 2
							LOCALS = 다음 주 출시 예정인 한정 명품
						CASE 3
							LOCALS = 소문난 아이돌의 라이브 티켓
					ENDSELECT
					CALL MESSAGE_WINDOW_D, "", @"＞듣자하니 %조사처리(LOCALS,"가")% 필요한 모양이다/좀비 쨩들은 꺄아꺄아 거리며 이야기하고 있다"
					CALL MESSAGE_WINDOW_D, "", "………………/…………/……"
					CALL MESSAGE_WINDOW_D, "좀비 쨩 A", "저항? 으―음, 이 몸으로 이제 와서 에로고 뭐고 없고―/비싸게 팔린다면 그거로 좋지∼ 라고나 할까―"
					CALL MESSAGE_WINDOW_D, "", "＞그 둘은 거리낌 없이 속옷을 벗고 건네왔다/향수 냄새가 강하게 배어 있다…/체온이 남아있다면, 좀비 쨩이 입고 있었다는 걸 눈치채지 못 할 것이다…"
			ENDSELECT
		ENDIF
		CALL SHOW_PICTURE, "EMPTY"
		;お持ち帰り可フラグを立てる(描写的にオトコ前提にしちゃったので、ここで除外)
		IF TALENT:MASTER:남자
			롯폰기창관플래그:20 = 2
		ENDIF
	CASE "身受け価格"
		RETURN 500
	CASE "身受け確認"
		;身受けという名目の普通のパパ活
		CALL MESSAGE_WINDOW_D, "노출한 웨이트리스", @"그녀는―/「여고생은 자지가 필요해요」 같은 거에요―"
		CALL MESSAGE_WINDOW_D, "노출한 웨이트리스", @"500 마카로 불려가도 좋다고 하는데―/어떠신가요―?"
	CASE "身受け口上"
		;身受けという名目の普通のパパ活なのでキャラ追加はなし。フラグを身受け済に変更せず再び選べる
		SELECTCASE RAND:3
			CASE 0
				;彼氏持ち。NTRっぽい流れ
				CALL MESSAGE_WINDOW_D, "흑발 피어스", "흐―응, 당신이 오늘 상대?/귀찮네…빨리 끝내자고"
				CALL MESSAGE_WINDOW_D, "", "………………/…………/……"
				CALL SHOW_PICTURE, "EMPTY"
				CALL MESSAGE_WINDOW_D, "흑발 피어스", @"후―우%ハート()% 후―욱%ハート()%/남친보다…쩔어…%ハート()% 안이…뜨거워…%ハート()%/(오늘…안전하던가…? 약…안 먹으면…생겨버릴…지도)"
				CALL MESSAGE_WINDOW_D, "", "＞즐겁게 놀았다…"
			CASE 1
				;淫乱ピンク。プレイ後は脳内ピンク一色に
				CALL MESSAGE_WINDOW_D, "핑크머리 플레이걸", @"파―파%ハート()% 용돈 잔―뜩 줘야해%ハート()%/(하아…돈 떄문이라고는 해도 변태 상대라든가 따분해…)"
				CALL MESSAGE_WINDOW_D, "", "………………/…………/……"
				CALL SHOW_PICTURE, "EMPTY"
				CALL MESSAGE_WINDOW_D, "핑크머리 플레이걸", @"파파아%ハート()% 좀 더 기분 좋게%ハート(3)%/도온? 그런건 이젠 아무래도 좋으니까%ハート()%/(자지%ハート()%자지%ハート()%자지%ハート()%자지%ハート()%자지%ハート()%자지%ハート()%)"
				CALL MESSAGE_WINDOW_D, "", "＞즐겁게 놀았다…"
			CASE 2
				;ゾンビちゃん。ちょっと趣味入れ過ぎたかも…
				CALL MESSAGE_WINDOW_D, "", "＞상대는 수다쟁이 좀비 쨩이었다"
				CALL MESSAGE_WINDOW_D, "좀비 쨩", "야호―! 너 서머너 군이지!/아니―사정을 아는 사람이 상대하기 쉬워서 말이야―"
				CALL MESSAGE_WINDOW_D, "좀비 쨩", "일반인으로 착각받는다는 건 꽤 힘들어―/햐―이계에서 헌팅당하는 것보다 훨씬 편하고 확실하지만 말이야―"
				CALL MESSAGE_WINDOW_D, "", "………………/…………/……"
				CALL MESSAGE_WINDOW_D, "좀비 쨩", "이거 봐, 생전 습관이라는게 있잖아?/난 생전엔 연줄이 생활의 중심이었어"
				CALL MESSAGE_WINDOW_D, "좀비 쨩", "이렇게…/사람 피부가 그리워질 때가 있다고나 할까―?/섹스하고 있을 때만, 나 살아있구나 하고 실감할 수 있었어…"
				CALL MESSAGE_WINDOW_D, "좀비 쨩", "…이미 죽었지만 말이야/이렇게 되니 역시 가끔 생각하게 돼…난 살아가면서 죽었구나 하고…"
				CALL MESSAGE_WINDOW_D, "", "………………/…………/……"
				CALL SHOW_PICTURE, "EMPTY"
				CALL MESSAGE_WINDOW_D, "좀비 쨩", "응……응……――/……고마워, 위로해줘서…/서머너 군은 착하네…나도 모르게 울고 싶을 정도야…"
				CALL MESSAGE_WINDOW_D, "", "＞――――…"
		ENDSELECT
		EXP:MASTER:성교경험 += ABL:MASTER:기교 * 2 + 1
		EXP:MASTER:절정경험 += ABL:MASTER:기교
		;連続してお持ち帰りできないようにフラグを戻す
		롯폰기창관플래그:20 = 1
	CASE "宣伝"
		;
ENDSELECT

